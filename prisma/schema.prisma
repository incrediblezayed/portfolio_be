// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  image         String
  otherImages   String[]
  url           String
  googlePlayUrl String
  appStoreUrl   String
  githubUrl     String
  createdAt     DateTime @default(now())
  startDate     DateTime
  endDate       DateTime

  @@map(name: "projects")
}

model WorkExperince {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  position     String
  company      String
  website      String
  location     String
  achievements String[]
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime  @default(now())

  @@map(name: "work_experinces")
}

model EnquiryModel {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@map(name: "enquiries")
}
