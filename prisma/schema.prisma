// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  image         String
  otherImages   String[]
  url           String
  googlePlayUrl String
  appStoreUrl   String
  githubUrl     String
  techStacks    TechStack[] @relation(fields: [techStackIds], references: [id])
  techStackIds  String[]    @db.ObjectId
  createdAt     DateTime    @default(now())
  startDate     DateTime
  endDate       DateTime

  @@map(name: "projects")
}

model WorkExperince {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  position     String
  company      String
  website      String
  location     String
  achievements String[]
  techStacks   TechStack[] @relation(fields: [techStackIds], references: [id])
  techStackIds String[]    @db.ObjectId
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime    @default(now())

  @@map(name: "work_experinces")
}

model EnquiryModel {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@map(name: "enquiries")
}

model Resume {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  resume String

  @@map(name: "resumes")
}

model TechStack {
  id              String          @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  image           String
  link            String
  createdAt       DateTime        @default(now())
  WorkExperince   WorkExperince[] @relation(fields: [workExperinceId], references: [id])
  workExperinceId String[]        @db.ObjectId
  Project         Project[]       @relation(fields: [projectId], references: [id])
  projectId       String[]        @db.ObjectId

  @@map(name: "tech_stacks")
}

model JobModel {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  location  String
  status    String
  createdAt DateTime @default(now())

  @@map(name: "jobs")
}

model PhonePeResponse {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  data Json

  @@map(name: "phone_pe_responses")
}
